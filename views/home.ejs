<html>
    <head>
        <title>
            <%=title%>
        </title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
        <style>
          .dropd{
            color:black;
            background-color: cadetblue;
            width:100%;
            border:0px;
          }
          .tidy{
            background-color: grey;
          }
        </style>
    </head>
    <body>
        <h3 class="text-center text-primary">
            <small class="">TO <mark class="text-success">DO APP</mark></small>
        </h3>
        <form action="/create-Todo" method="POST">
        <div class="card">
            <div class="card-body">
                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Description</label>
                    <input  type="text" class="form-control" name="descrip" id="exampleFormControlTextarea1" rows="3"></textarea>
                  </div>
            </div>
        </div>
        <div class=".container-fluid">
            <div class="row">
              <div class="col border">
                <label for="Category" style="color:grey;font-weight: bold">Category</label><br><br>
                <select class="dropd" name="Category">
                  <option value="Personal">Personal</option>
                  <option value="School">School</option>
                  <option value="Work">Work</option>
                  <option value="Other">Other</option>
                </select> 
              </div>
              <div class="col border">
                <label for="due">Choose the Date</label><br><br>
                <input type="date" name="date" style="background-color:cadetblue;border:0px;width:100%">
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-primary" style="position: relative; left:40%;margin-top:50px ">
            ADD <span class="badge bg-secondary">+</span>
          </button>
          </form>
          <div style="margin-top: 20px">
            <ul>
                <%for(let i of Todolist){%>
                    <li>
                        <div class="tidy">
                        <p><%= i.descrip %> </p>
                        <p><%= i.cate %> </p>
                        <p><%=i.date%></p>
                        </div>
                        <div>
                            <a href="/delete-contact/?id=<%= i._id%>"><!-- anchor bydefault send GET method -->
                                <i class="fas fa-window-close"></i>
                            </a>
                            </div>
                    </li>
                    <%}%>
            </ul>
        </div>
          <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
          <script src="https://kit.fontawesome.com/fc50b41c42.js" crossorigin="anonymous"></script>
    </body>
</html>